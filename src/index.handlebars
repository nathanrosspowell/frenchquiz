    <body body data-spy="scroll" data-target="#side-nav">
       <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <div class="masthead clearfix">
            <div class="inner">
              <h3 class="masthead-brand">{{ project.title }}</h3>
              <ul class="nav masthead-nav">
                    <li class="active"><a href="#">Home</a></li>
                    {{#each_quiz}}
                        <li>
                            <a href="{{ id }}">
                                {{ name }}
                            </a>
                        </li>
                   {{/each_quiz}}
                </ul>
              </div>
          </div>

          <div class="inner cover">
            <h1 class="cover-heading">{{ project.title }}</h1>
            <p class="lead">{{{ project.description.markdown }}}</p>
            <p class="lead">
                {{#each_quiz}}
                    {{#equal index 0 }} 
                        <a href="{{ id }}" class="btn btn-lg btn-default">Get started</a>
                    {{/equal}}
                {{/each_quiz}}
            </p>
          </div>

          <div class="mastfoot">
            <div class="inner">
              <p>Cover template for <a href="http://getbootstrap.com">Bootstrap</a>, by <a href="https://twitter.com/mdo">@mdo</a>.</p>
            </div>
          </div>

        </div>

      </div>

    </div>
        <!--/container-->
